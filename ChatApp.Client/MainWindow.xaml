<Window x:Class="ChatApp.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkyChat - Modern Messenger" Height="550" Width="450"
        Background="#1E1E1E" Foreground="White">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <TextBlock Text="💬 SkyChat Live" FontSize="20" FontWeight="Bold" Margin="0,0,0,15" Foreground="#007ACC"/>

        <ListBox x:Name="MessagesList" Grid.Row="1" Background="Transparent" BorderThickness="0" 
                 ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#2D2D30" CornerRadius="10" Padding="10" Margin="0,5,50,5" HorizontalAlignment="Left">
                        <StackPanel>
                            <TextBlock Text="{Binding Sender}" FontWeight="Bold" Foreground="#007ACC" FontSize="11"/>
                            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" Margin="0,2,0,0" FontSize="14" Foreground="White"/>
                            <TextBlock Text="{Binding Timestamp}" FontSize="9" Foreground="Gray" HorizontalAlignment="Right" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Border Grid.Row="2" Background="#2D2D30" CornerRadius="20" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <ColumnDefinition Width="*"/>    <ColumnDefinition Width="Auto"/> </Grid.ColumnDefinitions>

                <TextBox x:Name="UserNameInput" Width="80" Background="Transparent" Foreground="#007ACC" 
                         BorderThickness="0,0,1,0" BorderBrush="#3F3F46" VerticalContentAlignment="Center" 
                         Padding="10,0" FontWeight="Bold" Text="User"/>
                
                <TextBox x:Name="MessageInput" Grid.Column="1" Background="Transparent" Foreground="White" 
                         BorderThickness="0" VerticalContentAlignment="Center" Padding="10,5" 
                         FontSize="14" KeyDown="MessageInput_KeyDown"/>

                <Button x:Name="SendButton" Grid.Column="2" Content="➤" Width="40" Height="40" 
                        Background="#007ACC" Foreground="White" BorderThickness="0" Cursor="Hand"
                        Click="SendButton_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>