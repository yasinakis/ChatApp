<Window x:Class="ChatApp.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anlık Mesajlaşma" Height="450" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

        <ListBox x:Name="MessagesList" Grid.Row = "0" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
            <TextBlock Text="Adınız: " VerticalAlignment="Center"/>
            <TextBox x:Name="UserNameInput" Width="100" Margin="5,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="MessageInput" Grid.Column="0" Margin="0,0,5,0"/>
            <Button x:Name="SendButton" Content="Gönder" Grid.Column="1" Width="75" Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>